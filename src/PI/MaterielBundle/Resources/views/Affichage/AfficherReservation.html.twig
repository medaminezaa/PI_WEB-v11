{% extends "PIBaseBundle::layoutadmin.html.twig" %}
{% block content %}
    <form id="dynamic-table_wrapper" class="dataTables_wrapper form-inline no-footer">
    <div >


    <div class="content-wrapper">
    <div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4 class="page-head-line">Liste des  Réservations</h4>

        </div>
    </div>


    <div class="row">
    <div class="col-md-12">



    <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1" colspan="1">Nom du materiel reservé</th>
        <th class="sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1" colspan="1">Nom utilisateur</th>
        <th class="sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1" colspan="1">Quantitet reservé</th>
        <th class="sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1" colspan="1">Prix DT</th>
        <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1" colspan="1">Date Reservation</th>

        </thead>

        <tbody>

        {% for res in pagination %}



        <tr role="row" class="odd">
            <td>{{ res.idmateriel.nom}} </td>
            <td>{{ res.idclient.username}} </td>
            <td>{{ res.quantite}} </td>
            <td>{{ res.prix}} </td>
            <td>{{ res.dateres|date}} </td>

            {% endfor %}
        </tr></tbody>
    </table>
    <div class="col-xs-6">
        <div class="dataTables_paginate paging_simple_numbers" id="dynamic-table_paginate">
            <ul class="pagination">
                {{ knp_pagination_render(pagination) }}

            </ul>
        </div>
    </div>

{% endblock %}